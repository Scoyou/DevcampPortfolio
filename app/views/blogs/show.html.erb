<div class="col-md-8 blog-main">

  <h2><%= @blog.title %></h2>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to "Home", root_path %>
    </li>
    <li class="breadcrumb-item">
      <%= link_to @blog.topic.title, topic_path(@blog.topic) %>
    </li>
    <li class="breadcrumb-item active">
      <span><%= @blog.title %></span>
    </li>
  </ol>
  <span class="pull-right">
    <%= link_to fa_icon('pencil-square-o'), edit_blog_path(@blog) if logged_in?(:site_admin) %>
    <%= link_to fa_icon('trash'), @blog, method: :delete, data: {confirm: 'Are you sure you want to delte this post?'} if logged_in?(:site_admin) %>
  </span>
</nav>

  <p>
    <%= markdown @blog.body %>
  </p>

  <%= render 'comments/comment_form' %>
  <div id='comments' data-blog-id='<%= @blog.id %>'>
    <%= render @blog.comments %>
  </div>

  <%= link_to "Back to blogs", blogs_path, class: "text-muted" %>
</div>
